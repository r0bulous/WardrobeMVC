    ViewBag.Title = "Details";
}

<head>
    <style>

        /* Grid setup/styling */
        .grid-container {
            display: grid;
            grid-template-columns: 10px 1fr 1fr 1fr 1fr 1fr 10px;
            grid-template-rows: 50px 50px auto 50px 50px;
            grid-gap: 10px;
        }

        /* Grid items */

        .item1 {
            display: flex;
            grid-column: 2 / span 3;
            grid-row: 1 / span 3;
            background-color: teal;
            justify-content: flex-start;
            /*background-image: url()*/
        }

        .item2 {
            display: flex;
            grid-column: 5 / span 2;
            grid-row: 1;
