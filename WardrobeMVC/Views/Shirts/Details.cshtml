@model WardrobeMVC.Shirt

@{
    ViewBag.Title = "Details";
}

<head>

    <link href="~/Content/itemdetailsgrid.css" rel="stylesheet" /> <!-- Details stylesheet with layout -->

</head>


<div>

    <div class="grid-container">

        <div class="item1">

            <img src="~/Images/@Html.DisplayFor(model => model.ShirtImage)" style="width:600px;" />

        </div>

        <div class="item2">
            <h4>@Html.DisplayFor(model => model.ShirtName)</h4>
        </div>

        <div class="item3">
            <p>@Html.DisplayFor(model => model.ShirtNotes)</p>
        </div>

        <div class="item4">
            <p>@Html.DisplayNameFor(model => model.ShirtType): @Html.DisplayFor(model => model.ShirtType.ShirtType1)</p>
            <p>@Html.DisplayNameFor(model => model.ShirtColor): @Html.DisplayFor(model => model.ShirtColor.ShirtColor1)</p>
            <p>@Html.DisplayNameFor(model => model.ShirtOccasion): @Html.DisplayFor(model => model.ShirtOccasion.ShirtOccasion1)</p>
            <p>@Html.DisplayNameFor(model => model.ShirtSeason): @Html.DisplayFor(model => model.ShirtSeason.ShirtSeason1)</p>
        </div>

        <div class="item5">
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ShirtId }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>

    </div>
</div>
