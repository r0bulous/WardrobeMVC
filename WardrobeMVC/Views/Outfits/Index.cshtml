@model IEnumerable<WardrobeMVC.Outfit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OutfitName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OutfitNotes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Belt.BeltName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pant.PantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shirt.ShirtName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sho.ShoeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OutfitName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OutfitNotes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Belt.BeltName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pant.PantName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shirt.ShirtName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sho.ShoeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OutfitId }) |
            @Html.ActionLink("Details", "Details", new { id=item.OutfitId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OutfitId })
        </td>
    </tr>
}

</table>
